<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>
      <% if @task.completed? %>
        <i class="fas fa-check-square text-success me-2"></i>
      <% else %>
        <i class="far fa-square me-2"></i>
      <% end %>
      <%= @task.title %>
    </h1>
    <div>
      <%= link_to edit_task_path(@task), class: "btn btn-primary me-2" do %>
        <i class="fas fa-edit"></i> Edit
      <% end %>
      <%= link_to task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" do %>
        <i class="fas fa-trash"></i> Delete
      <% end %>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <p class="card-text"><%= @task.details %></p>
    </div>
  </div>

  <%= link_to "Back to list", tasks_path, class: "btn btn-secondary mt-3" %>
</div>
